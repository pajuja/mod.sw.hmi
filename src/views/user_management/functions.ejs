function updateUser(id) {
	var userData = "userid=" + encodeURIComponent($("#userid_" + id).val()) + "&role=" + encodeURIComponent($("#role_" + id).val());
	if ($("#name_" + id).val() != "") {
		userData += "&name=" + encodeURIComponent($("#name_" + id).val());
	}
	if ($("#password_" + id).val() != "") {
		userData += "&password=" + encodeURIComponent($("#password_" + id).val());
	}
	if ($("#password_" + id).val() != "" && $("#password_" + id).val() != $("#confirm_pw_" + id).val()) {
		showAndDismissAlert("danger", "Password and password again are not the same.", "usersAlert");
//Not needed anymore (OCB connection). Left here commented out for possible later use
