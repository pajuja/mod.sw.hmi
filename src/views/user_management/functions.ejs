//		showAndDismissAlert("danger", "OCB Host and OCB Port need to be defined in the Settings tab to be able to update users.", "usersAlert");				
	} else {				
//		$("#newUserOCBHost").val($("#ocb_host").val());
//		$("#newUserOCBPort").val($("#ocb_port").val());
		$.ajax({
			url: "./api/user/" + id,
			type: "PUT",
			data: userData
		}).done(function(data) {							
			showAndDismissAlert("success", "User updated!", "usersAlert");
		}).fail(function(xhr, status, err) {
			showAndDismissAlert("danger", xhr.responseText, "usersAlert");				
		});				
	}
	return false;
	
}

