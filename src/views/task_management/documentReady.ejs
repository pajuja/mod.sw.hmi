$('#taskManagementTable').on('click', '.clickable-row', function(event) {
	if($(this).hasClass('bg-info')){
		$(this).removeClass('bg-info'); 
	} else {
		$(this).addClass('bg-info').siblings().removeClass('bg-info');
	}
});

